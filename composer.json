{
    "name": "petrknap/utils",
    "description": "Useful PHP utils by Petr Knap",
    "license": "MIT",
    "authors": [
        {
            "name": "Petr Knap",
            "email": "dev@petrknap.cz",
            "homepage": "http://petrknap.cz",
            "role": "Developer"
        }
    ],
    "config": {
        "preferred-install": "dist"
    },
    "require": {
        "php": ">=5.4",
        "petrknap/php-image": "0.9",
        "petrknap/php-singleton": "0.1.*"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.0"
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit"
        ],
        "post-autoload-dump": [
            "@test"
        ]
    },
    "autoload": {
        "psr-4": {
            "PetrKnap\\Utils\\": "src/"
        }
    }
}
